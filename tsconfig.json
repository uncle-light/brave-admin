{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*":["src/*"],
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue","types/*.ts","components.d.ts","auto-imports.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
